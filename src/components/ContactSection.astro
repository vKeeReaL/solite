---
// Contact Section Component
---

<section id="contact" class="py-20 bg-custom-black">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bebas text-custom-white mb-6">
        Get in Touch
      </h2>
      <p class="text-xl text-custom-silver/80 max-w-3xl mx-auto">
        Have questions about our candles? Want to place a custom order? We'd love to hear from you!
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <!-- Contact Form -->
      <div class="bg-custom-black border border-custom-silver/20 shadow-xl p-8">
        <h3 class="text-2xl font-bebas text-custom-white mb-6">Send us a Message</h3>
        
        <form id="contactForm" class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-custom-silver mb-2">
                First Name
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                class="w-full px-4 py-3 border border-custom-silver/30 focus:ring-2 focus:ring-custom-silver focus:border-transparent transition-colors bg-custom-black text-custom-white placeholder-custom-silver/50"
                placeholder="Your first name"
                required
              />
            </div>
            
            <div>
              <label for="lastName" class="block text-sm font-medium text-custom-silver mb-2">
                Last Name
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                class="w-full px-4 py-3 border border-custom-silver/30 focus:ring-2 focus:ring-custom-silver focus:border-transparent transition-colors bg-custom-black text-custom-white placeholder-custom-silver/50"
                placeholder="Your last name"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-custom-silver mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 border border-custom-silver/30 focus:ring-2 focus:ring-custom-silver focus:border-transparent transition-colors bg-custom-black text-custom-white placeholder-custom-silver/50"
              placeholder="your.email@example.com"
              required
            />
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-custom-silver mb-2">
              Subject
            </label>
            <select
              id="subject"
              name="subject"
              class="w-full px-4 py-3 border border-custom-silver/30 focus:ring-2 focus:ring-custom-silver focus:border-transparent transition-colors bg-custom-black text-custom-white"
              required
            >
              <option value="" class="bg-custom-black text-custom-white">Select a subject</option>
              <option value="general" class="bg-custom-black text-custom-white">General Inquiry</option>
              <option value="product" class="bg-custom-black text-custom-white">Product Question</option>
              <option value="custom" class="bg-custom-black text-custom-white">Custom Order</option>
              <option value="wholesale" class="bg-custom-black text-custom-white">Wholesale Inquiry</option>
              <option value="support" class="bg-custom-black text-custom-white">Customer Support</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-custom-silver mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full px-4 py-3 border border-custom-silver/30 focus:ring-2 focus:ring-custom-silver focus:border-transparent transition-colors resize-none bg-custom-black text-custom-white placeholder-custom-silver/50"
              placeholder="Tell us how we can help you..."
              required
            ></textarea>
          </div>
          
          <div id="formMessage" class="hidden mt-4"></div>
          
          <button
            type="submit"
            id="submitBtn"
            class="w-full bg-custom-silver hover:bg-custom-silver/80 text-custom-black py-4 px-6 font-bebas text-lg transition-colors duration-300 transform hover:scale-105"
          >
            <span id="submitText">Send Message</span>
            <span id="submitSpinner" class="hidden">
              <svg class="animate-spin h-5 w-5 text-custom-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
          </button>
        </form>
      </div>
      
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bebas text-custom-white mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-custom-silver/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-custom-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-custom-white">Address</h4>
                <p class="text-custom-silver/80">Wollongong, NSW 2500</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-custom-silver/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-custom-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-custom-white">Email</h4>
                <a href="mailto:info@solitecandles.com" class="text-custom-silver hover:text-custom-white transition-colors">
                  info@solitecandles.com
                </a>
              </div>
            </div>
            
          </div>
        </div>
        
        <!-- Business Hours -->
        <div class="bg-custom-black border border-custom-silver/20 shadow-lg p-6">
          <h4 class="font-semibold text-custom-white mb-4">Business Hours</h4>
          <div class="space-y-2 text-sm text-custom-silver/80">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span>9:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>10:00 AM - 4:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>Closed</span>
            </div>
          </div>
        </div>
        
        <!-- Social Media -->
        <div class="bg-custom-black border border-custom-silver/20 shadow-lg p-6">
          <h4 class="font-semibold text-custom-white mb-4">Follow Us</h4>
          <div class="flex space-x-4">
            <a href="#" class="w-10 h-10 bg-custom-silver/20 flex items-center justify-center text-custom-silver hover:bg-custom-silver hover:text-custom-black transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="w-10 h-10 bg-custom-silver/20 flex items-center justify-center text-custom-silver hover:bg-custom-silver hover:text-custom-black transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 0c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 01-1.93.07 4.28 4.28 0 004 2.98 8.521 8.521 0 01-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
              </svg>
            </a>
            <a href="#" class="w-10 h-10 bg-custom-silver/20 flex items-center justify-center text-custom-silver hover:bg-custom-silver hover:text-custom-black transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.012 12.017.012z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const submitText = document.getElementById('submitText');
    const submitSpinner = document.getElementById('submitSpinner');
    const formMessage = document.getElementById('formMessage');

    if (!form) return;

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Show loading state
      submitBtn.disabled = true;
      submitText.classList.add('hidden');
      submitSpinner.classList.remove('hidden');
      formMessage.classList.add('hidden');
      
      // Get form data
      const formData = new FormData(form);
      const data = {
        firstName: formData.get('firstName'),
        lastName: formData.get('lastName'),
        email: formData.get('email'),
        subject: formData.get('subject'),
        message: formData.get('message')
      };
      
      try {
        // Send to PHP API
        const response = await fetch('https://api.solite.au/contact.php', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        // Show message
        formMessage.textContent = result.message;
        formMessage.classList.remove('hidden');
        
        if (result.success) {
          // Success - reset form and show success message
          formMessage.className = 'mt-4 p-4 bg-green-900/20 border border-green-500/30 text-green-400';
          form.reset();
        } else {
          // Error - show error message
          formMessage.className = 'mt-4 p-4 bg-red-900/20 border border-red-500/30 text-red-400';
        }
        
      } catch (error) {
        // Network or other error
        console.error('Error:', error);
        formMessage.textContent = 'An error occurred. Please try again or contact us directly.';
        formMessage.className = 'mt-4 p-4 bg-red-900/20 border border-red-500/30 text-red-400';
        formMessage.classList.remove('hidden');
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        submitText.classList.remove('hidden');
        submitSpinner.classList.add('hidden');
      }
    });
  });
</script>
