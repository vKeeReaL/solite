---
import { products } from '../data/products.ts';
---

<section id="products" class="py-20 bg-custom-black">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bebas text-custom-white mb-6">
        Our Premium Collection
      </h2>
      <p class="text-xl text-custom-silver/80 max-w-3xl mx-auto">
        Discover our handcrafted luxury candles, each carefully made with premium materials and exquisite fragrances.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <div class="bg-custom-black border border-custom-silver/20 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 group">
          <!-- Product Image -->
          <div class="relative overflow-hidden">
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full aspect-[280/320] object-contain bg-custom-black transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-custom-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="bg-custom-silver text-custom-black px-3 py-1 text-sm font-bebas">
                {product.category}
              </span>
            </div>

            <!-- Quick View Button -->
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a 
                href={`https://www.ebay.com.au/itm/${product.id === "1" ? "376465300458" : product.id === "2" ? "376471269753" : product.id === "3" ? "376471275009" : "376456100959"}?itmmeta=01K3ZW82KXVBYS63MYZX4YF4CD&hash=item57a7149bea:g:4Y4AAeSw-zFoe4ru`}
                target="_blank"
                rel="nofollow noopener noreferrer"
                class="bg-custom-silver text-custom-black px-6 py-3 font-bebas hover:bg-custom-silver/80 transition-colors"
              >
                View on eBay
              </a>
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="p-6">
            <h3 class="text-xl font-bebas text-custom-white mb-2">{product.name}</h3>
            <p class="text-custom-silver/80 mb-4 line-clamp-2">{product.description}</p>
            
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bebas text-custom-silver">{product.price}</span>
              <span class="text-sm text-custom-silver/60">Burns {product.burnTime}</span>
            </div>
            
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="flex text-custom-silver">
                  <span class="text-sm font-medium">â˜… {product.rating}/5</span>
                </div>
                <span class="text-sm text-custom-silver/60 ml-2">({product.reviews})</span>
              </div>
            </div>
            
            <a 
              href={`https://www.ebay.com.au/itm/${product.id === "1" ? "376465300458" : product.id === "2" ? "376471269753" : product.id === "3" ? "376471275009" : "376456100959"}?itmmeta=01K3ZW82KXVBYS63MYZX4YF4CD&hash=item57a7149bea:g:4Y4AAeSw-zFoe4ru`}
              target="_blank"
              rel="nofollow noopener noreferrer"
              class="w-full bg-custom-silver hover:bg-custom-silver/80 text-custom-black py-3 px-4 font-bebas transition-colors duration-300 text-center block"
            >
              Buy on eBay
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View All Button -->
    <div class="text-center mt-12">
      <a 
        href="https://www.ebay.com.au/sch/i.html?sid=solite&_pgn=1&isRefine=true&_trksid=p4429486.m2548.l2567" 
        target="_blank"
        rel="nofollow noopener noreferrer"
        class="inline-block bg-custom-silver hover:bg-custom-silver/80 text-custom-black px-8 py-4 text-lg font-bebas transition-colors duration-300"
      >
        View All Products on eBay
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
