---
// Product Showcase Section
import { products } from '../data/products';
---

<section id="products" class="py-20 bg-custom-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bebas text-custom-white mb-4">
        Our Premium Candle Collection
      </h2>
      <p class="text-xl text-custom-silver/80 max-w-3xl mx-auto">
        Each candle is handcrafted with care using premium soy wax, cotton wicks, and carefully selected fragrances. 
        Discover the perfect scent for every mood and occasion.
      </p>
    </div>
    
    <!-- Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <div class="bg-custom-black border border-custom-silver/20 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 group">
          <!-- Product Image -->
          <div class="relative overflow-hidden">
            <div class="aspect-square bg-gradient-to-br from-custom-silver/10 to-custom-silver/5 flex items-center justify-center">
              <div class="text-6xl text-custom-silver opacity-60">üïØÔ∏è</div>
            </div>
            <div class="absolute inset-0 bg-custom-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <!-- Category Badge -->
            <div class="absolute top-4 left-4">
              <span class="bg-custom-silver text-custom-black px-3 py-1 text-sm font-bebas">
                {product.category}
              </span>
            </div>
            
            <!-- Quick View Button -->
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <button class="bg-custom-silver text-custom-black px-6 py-3 font-bebas hover:bg-custom-silver/80 transition-colors">
                Quick View
              </button>
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="p-6">
            <h3 class="text-xl font-bebas text-custom-white mb-2">{product.name}</h3>
            <p class="text-custom-silver/80 mb-4 line-clamp-2">{product.description}</p>
            
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bebas text-custom-silver">{product.price}</span>
              <span class="text-sm text-custom-silver/60">Burns {product.burnTime}</span>
            </div>
            
            <button class="w-full bg-custom-silver hover:bg-custom-silver/80 text-custom-black py-3 px-4 font-bebas transition-colors duration-300">
              Add to Cart
            </button>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/products" class="inline-block bg-custom-silver hover:bg-custom-silver/80 text-custom-black px-8 py-4 text-lg font-bebas transition-colors duration-300">
        View All Products
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
